{
  "name": "xpresso-mcp",
  "version": "0.3.1",
  "description": "Xcode MCP server - build, test, run, and manage simulators from Claude Code",
  "type": "module",
  "bin": {
    "xpresso-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --target=node --outdir=dist --format=esm",
    "prepublishOnly": "bun run build",
    "start": "node dist/index.js",
    "dev": "bun --watch run src/index.ts"
  },
  "keywords": [
    "mcp",
    "xcode",
    "xcodebuild",
    "simulator",
    "claude",
    "ios"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alisheryeginbay/xpresso.git"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  }
}
